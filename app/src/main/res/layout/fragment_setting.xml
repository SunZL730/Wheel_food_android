<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="wheelofeats.roxdesign.com.wheelofeats.Fragment.SettingFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_logo_padding"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/setting_items_margin"
            android:layout_marginRight="@dimen/setting_items_margin"
            android:layout_marginTop="@dimen/setting_logo_padding"
            android:layout_weight="1"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_row_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/sound" />

                <Switch
                    android:id="@+id/switch_sound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:checked="true"
                    android:text="@string/sound"
                    android:textSize="@dimen/text_title"
                    android:theme="@style/SCBSwitch" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/division_height"
                android:layout_marginTop="@dimen/setting_division_margin"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_row_height"
                android:layout_marginTop="@dimen/setting_items_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/privacy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/privacy_policy"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/division_height"
                android:layout_marginTop="@dimen/setting_division_margin"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/unlock_feature"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_row_height"
                android:layout_marginTop="@dimen/setting_items_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/unlockmore" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/unlock_more_feature"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/division_height"
                android:layout_marginTop="@dimen/setting_division_margin"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_row_height"
                android:layout_marginTop="@dimen/setting_items_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/share" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/share"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_row_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/share_facebook"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_facebook" />

                <ImageView
                    android:id="@+id/share_google"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_google" />

                <ImageView
                    android:id="@+id/share_instagram"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_instagram" />

                <ImageView
                    android:id="@+id/share_pinterest"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_pinterest" />

                <ImageView
                    android:id="@+id/share_twitter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_twitter" />

                <ImageView
                    android:id="@+id/share_tumblr"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_tumblr" />

                <ImageView
                    android:id="@+id/share_mail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_mail" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/division_height"
                android:layout_marginTop="@dimen/setting_division_margin"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"></LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_row_height"
                android:layout_marginTop="@dimen/setting_items_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/followus"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_title" />

                <ImageView
                    android:id="@+id/follow_fb"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_facebook" />

                <ImageView
                    android:id="@+id/follow_tt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_twitter" />

                <ImageView
                    android:id="@+id/follow_ig"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_instagram" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>
