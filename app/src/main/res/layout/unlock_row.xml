<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unlock_row"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/unlock_row_img"
        android:layout_width="96dp"
        android:layout_height="@dimen/unlock_cicle_size"
        android:layout_marginLeft="@dimen/unlock_cicle_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/unlock_item1"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/unlock_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/unlock_btt_buy"
                android:layout_alignBottom="@+id/unlock_btt_buy"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Unlock"
                android:textSize="@dimen/text_content"
                tools:ignore="HardcodedText,SpUsage" />

            <Button
                android:id="@+id/unlock_btt_buy"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/unlock_button_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/drawable_button_blue"
                android:textAllCaps="false"
                android:textColor="@drawable/drawable_text_white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/unlock_row_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/unlock_cicle_margin"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="6"
            android:maxLines="30"
            android:scrollbars="vertical"
            tools:ignore="InefficientWeight" />
    </LinearLayout>

</LinearLayout>
